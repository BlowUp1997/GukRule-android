<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="205dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@drawable/select_article_widget_box"
        android:gravity="center"
        android:elevation="20dp"
        >

        <ImageView
            android:id="@+id/select_article_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:src="@drawable/article_image"
            />

        <TextView
            android:id="@+id/select_article_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="기사 제목이 들어갈 공간입니다. 기사 제목이 들어갈 공간입니다. "
            android:textStyle="bold"
            android:padding="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            />



    </LinearLayout>

</LinearLayout>