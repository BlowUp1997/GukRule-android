<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- 뒤로가기 , 뒷페이지 이름 -->
    <LinearLayout
        android:id="@+id/article_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/into_budget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/article_back_button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingLeft="20dp"
            android:text="이전 페이지"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

<!-- 기사 제목 -->
    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="윤 대통령 '보육 책임' 말하고선 ... 국공립 어린이집 예산은 19% 삭감"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/article_header" />

<!--  요약 헤더 , 아이콘 -->
    <TextView
        android:id="@+id/article_summary_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="기사요약"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/article_title"

        />

    <ImageView
        android:id="@+id/article_summary_icon"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_weight="5"
        android:src="@drawable/article_summary_icon"
        app:layout_constraintStart_toEndOf="@id/article_summary_header"
        app:layout_constraintTop_toBottomOf="@id/article_title"

        />
<!-- 요약 전문 -->
    <TextView
        android:id="@+id/article_summary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="어린이집 확충 19%↓, 시설 개선 10%↓"
        app:layout_constraintTop_toBottomOf="@id/article_summary_icon"
        app:layout_constraintBottom_toTopOf="@+id/article_image"
        />

<!-- 기사 이미지 -->
    <ImageView
        android:id="@+id/article_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/article_summary_header"
        android:src="@drawable/article_image"
        />
<!--  기사 전문  -->

</androidx.constraintlayout.widget.ConstraintLayout>